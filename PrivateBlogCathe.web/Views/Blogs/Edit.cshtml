@model BlogDTO

@{
    ViewData["Title"] = "Editar Blog";
    string title = "Editar Blog";
}

@section Styles {
    <link href="~/lib/summernote/summernote-bs5.min.css" rel="stylesheet" />
}

<div class="pagetitle">
    <h1>Blogs</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">DashBoard</a></li>
            <li class="breadcrumb-item"><a asp-action="Index">Blogs</a></li>
            <li class="breadcrumb-item active">@title</li>
        </ol>
    </nav>
</div>

<section class="section dasboard">

    <div class="card">
        <div class="card-body">
            <h5 class="card-title" text-primary>@title</h5>

            <form class="row g-3" asp-action="Edit" method="POST">

                <input type="hidden" asp-for=Id />
                <div class="col-md-12">
                    <div class="form-floating">
                        <input asp-for="Title" class="form-control" id="floatingName" placeholder="@Html.DisplayFor(Model => Model.Title)">
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-floating">
                        <select asp-for="SectionId" asp-items="Model.Sections" class="form-control"></select>
                        <label asp-for="SectionId"></label>
                        <span asp-validation-for="SectionId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <label asp-for="Content"> Contenido</label>
                    <textarea asp-for="Content" class="form-control" rows=" ="10"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>

            </form>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~ /lib/summernote/summernote-bs5.min.js"></script>
    <script src="~ /lib/summernote/lang/summernote-es-ES.js"></script>

    <script>

        $(document).ready(function(){
            $('#Content').summernote({
                lang: 'es-ES',
                placeholder: 'Digite el blog...'
            });
        });
    </script>
}


